apt-get update
apt-get install git-core
git clone https://github.com/ecthros/pina-colada
cd pina-colada/
apt-get install postgresql-9.4
sudo service postgresql start
su postgres -c psql -c "create user aces with password 'aces';"
su postgres -c createdb network
python setup_postgres.py
sudo apt install python-netaddr
yes | sudo apt-get install build-essential python-dev libnetfilter-queue-dev
git clone https://github.com/fqrouter/python-netfilterqueue.git
cd python-netfilterqueue
python setup.py install
cd ..
apt install python-nmap
pip install --upgrade pip
pip install netifaces
pip install scapy
pip install netaddr
pip install pexpect
pip install colorama
pip install wifi
